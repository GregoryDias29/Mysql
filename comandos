/*para alterar a estrutura */
alter table pessoas
modify column profissao varchar(20) not null default '';/*ele vai aparecer um aviso pois antes ja tinha sido usado o campo e ao atulizar os campos esv]ao vazio e colocamos que não podeia esta vazio */

/*modifica ro nome de coluna*/
alter table pessoas
change column profissao/*antigo*//*novo*/ prof varchar (20) not null default'';

